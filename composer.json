{
    "name": "sambo-search/sambo-search-client",
    "description": "PHP API Client for Sambo-Search API",
    "type": "library",
    "version": "0.1.0",
    "require": {
        "guzzlehttp/guzzle": "^7.8",
        "php": ">=8.1",
        "symfony/polyfill-php84": "^1.31",
        "symfony/polyfill-php83": "^1.31",
        "symfony/polyfill-php82": "^1.31"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.59",
        "phpunit/phpunit": "^10",
        "phpunit/php-code-coverage": "^10"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Sambo-Search",
            "email": "support@sambo-search.com",
            "homepage": "https://sambo-search.com",
            "role": "maintainer"
        },
        {
            "name": "Dominik Brader",
            "email": "dominik@sambo-search.com",
            "homepage": "https://sambo-search.com",
            "role": "maintainer"
        }
    ],
    "autoload": {
        "psr-4": {
            "SamboSearch\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SamboSearchTest\\Client\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "test": "phpunit --configuration=phpunit.xml.dist --colors=always",
        "lint": "php-cs-fixer fix --dry-run --diff",
        "fix": "php-cs-fixer fix"
    }
}
